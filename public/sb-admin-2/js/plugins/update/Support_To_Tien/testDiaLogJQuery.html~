<body>
 
<button id="opener">open the dialog</button>
<div id="dialog"> <img  src="loading.gif" /></div>

<script>
$( "#dialog" ).dialog({ 
	autoOpen: false,
	width: 'auto',
	height:'auto',
	position: "top",	
    buttons: {
        "OK": function () {
            $(this).dialog("close");
        }
    }
 });
 
$( "#opener" ).click(function() {
  $( "#dialog" ).dialog( "open" );
  $(".ui-dialog-titlebar").hide();
});

</script>
 
